{
  "name": "@codecanvas/cli",
  "version": "0.1.0",
  "description": "CLI tool for detecting circular dependencies in TypeScript/JavaScript codebases",
  "type": "module",
  "bin": {
    "codecanvas": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "cli",
    "circular-dependencies",
    "typescript",
    "javascript"
  ],
  "license": "MIT",
  "dependencies": {
    "@codecanvas/core": "workspace:*",
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "commander": "^12.1.0",
    "fast-glob": "^3.3.2",
    "ora": "^8.1.0"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  }
}
